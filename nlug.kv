<NlugScreenManager>:
    ScreenWelcome:
    ScreenScore:
    ScreenGame:

<ScreenWelcome>:
    name: 'welcome'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to N-lug'
        Button:
            text: 'Start Game'
            on_press: app.root.current = 'game'
        Button:
            text: 'Scores'
            on_press: app.root.current = 'score'

<ScreenScore>:
    name: 'score'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Go back'
            on_press: app.root.current = 'welcome'


