<NlugScreenManager>:
    ScreenGame:
    ScreenWelcome:
    ScreenScore:
    #ScreenGame:

<ScreenWelcome>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to N-lug'
        Button:
            text: 'Start Game'
            on_press: app.root.current = 'game'
        Button:
            size_hint: 1, 1
            text: 'Scores'
            on_press: app.root.current = 'score'

<ScreenScore>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Button:
                orientation: 'vertical'
                size_hint_y: None
                height: '48dp'
                text: 'Go back'
                on_press: app.root.current = 'welcome'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Score ................... 0000001'
            Label:
                text: 'Score ................... 0000001'
            Label:
                text: 'Score ................... 0000001'
            Label:
                text: 'Score ................... 0000001'
            Label:
                text: 'Score ................... 0000001'
            Label:
                text: 'Score ................... 0000001'

<ScreenGame>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            Button:
                text: 'Quit'
                on_press: app.root.current = 'welcome'
            Label:
                text: 'Lives: I I I'
            Label:
                text: 'Fuel:'
            ProgressBar:
                id: progress_bar
                max: 100
                value: 0
            Label:
                text: 'Score: 105'
